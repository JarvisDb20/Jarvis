<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkg1"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_frag_comics"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/wolverine"
        android:scaleType="fitXY"
        />

    <LinearLayout
        android:id="@+id/ll_frag_comics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_frag_comics">

        <Button
            android:id="@+id/btn_frag_comics_char"
            style="@style/fontePrincipal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:drawableTop="@drawable/ic_btn_personagem"
            android:text="Char."
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_frag_comics_series"
            style="@style/fontePrincipal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:drawableTop="@drawable/ic_btn_series"
            android:text="Series"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_frag_comics_comics"
            style="@style/fontePrincipal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:drawableTop="@drawable/ic_btn_comics"
            android:text="Comics"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_frag_comics_stories"
            style="@style/fontePrincipal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:drawableTop="@drawable/ic_btn_stories"
            android:text="Stories"
            android:textColor="@color/white" />

    </LinearLayout>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#C5CFD1"
        app:cardCornerRadius="20dp"
        app:strokeColor="@color/black"
        app:strokeWidth="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_titulo_frag_comics"
                style="@style/fontePrincipal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:gravity="center"
                android:text="Nome da Comic"
                android:textColor="@color/titleColor"
                android:textSize="24sp" />
            <TextView
                android:id="@+id/tv_descricao_frag_comics"
                style="@style/fonteLeitura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="texto descrição"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
