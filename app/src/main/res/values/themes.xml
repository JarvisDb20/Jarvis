<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Jarvis" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->


        <item name="colorPrimary">@color/vivid_burgundy</item>
        <item name="colorPrimaryVariant">@color/cadet</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Jarvis.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Jarvis.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Jarvis.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <style name="LoginTheme" parent="FirebaseUI">
        // barra superior e botao
        <item name="colorPrimary">@color/vivid_burgundy</item>

        <item name="android:textColor">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        // texto botao
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        // linha edit text
        <item name="colorControlNormal">@color/white</item>

        //  texto escrito
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="colorOnError">@color/white</item>

        <item name="android:windowBackground">@drawable/image_login</item>
        <item name="android:fontFamily">@font/font_norwester</item>
    </style>

</resources>


